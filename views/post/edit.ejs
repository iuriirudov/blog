<h1>Edit Post</h1>
<form action="/post/<%= post._id %>?_method=PUT" method="POST">
    <div>
        <label for="title">Title: </label>
        <input type="text" name="title" id="title" value="<%= post.title %>">
    </div>
    <div>
        <label for="content">content: </label>
        <textarea name="content" id="content" cols="40" rows="20"><%= post.content %></textarea>
    </div>
    <div>
        <label for="summary">summary: </label>
        <input type="text" name="summary" id="summary" value="<%= post.summary %>">
    </div>
    <div>
        <label for="category">category: </label>
        <select name="category" id="category">
        <% categories.forEach(category => { %>
            <% if(category.id == post.category._id) { %>
                <option value="<%= category._id %>" selected style="background-color: #000000; color: white"><%= category.name %> (current)</option>
    
            <% } else { %>
                <option value="<%= category._id %>"><%= category.name %></option>
            <% } %>
        <% }) %>
        </select>
    </div>
    <div>
    <% if(post.active) { %>
        <input type="radio" name="active" value="1" id="active" checked><label for="active">Active</label>
        <input type="radio" name="active" value="0" id="inactive"><label for="inactive">Inactive</label>
    <% } else { %>
        <input type="radio" name="active" value="1" id="active"><label for="active">Active</label>
        <input type="radio" name="active" value="0" id="inactive" checked><label for="inactive">Inactive</label>
    <% } %>
    </div>
    <button type="submit">Edit</button>
</form>
<section>
    <div class="container padding-y">
        <h1>New Post</h1>
        <form action="/post" method="POST">
            <div class="form-row">
                <label for="title">Title: </label>
                <input type="text" name="title" id="title" placeholder="Title for your post">
            </div>
            <div class="form-row">
                <label for="headImage">URL Image for Header: </label>
                <input type="text" name="headImage" id="headImage" placeholder="URL for your image that will be in the background with title">
            </div>
            <div class="form-row">
                <label for="summary">Summary: </label>
                <textarea name="summary" id="summary" placeholder="Short description of the post"></textarea>
            </div>
            <div class="form-row">
                <label for="content">Content: </label>
                <textarea name="content" id="content" placeholder="Full post can include full array of HTML"></textarea>
            </div>
            <div class="form-row">
                <label for="category">Category: </label>
                <select name="category" id="category">
                <% categories.forEach(category => { %>
                    <option value="<%= category._id %>"><%= category.name %></option>
                <% }) %>
                </select>
            </div>
            <div class="form-row">
                <label for="tags">Tags (separate by comma ","): </label>
                <input type="text" name="tags" id="tags" placeholder="tag1, tag2, tag3...">
            </div>
            <button type="submit" class="btn">Create Post</button>
        </form>
    </div>
</section>
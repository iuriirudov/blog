<section>
    <div class="container">
        <% if(!posts.length) { %>
            <h1>Nothing matched your search request "<%= searchString %>". Try to change it or make a new one.</h1>
        <% } else if(posts.length === 1) { %>
            <h1>Found <%= posts.length %> post matching your request "<%= searchString %>"</h1>
        <% } else { %>
            <h1>Found <%= posts.length %> posts matching your request "<%= searchString %>"</h1>
        <% } %>
        <div class="grid">
            <% posts.forEach(post => { %>
            <div class="card">
                <div class="card-body">
                    <div class="post-block-thumbnail" style="background: url('<%= post.headImage %>') center; background-size: cover;">
                        <div>
                            <a href="/category/<%= post.category._id %>" class="btn"><%= post.category.name %></a>
                        </div>
                    </div>
                </div>
                <div class="post-block-text">
                    <h4 class="post-block-title">
                        <a href="/post/<%= post._id %>" class="post-block-title-link transition"><%= post.title %></a>
                    </h4>
                    <p class="post-block-summary"><%= post.summary %></p>
                    <p class="post-block-date"><i class="fa fa-clock-o" aria-hidden="true"></i> &nbsp;<%= post.date.toDateString() + ' at ' + post.date.toLocaleTimeString('en-US') %></p>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>